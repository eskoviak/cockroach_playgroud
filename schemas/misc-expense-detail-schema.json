{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://eskoviak.com/schemas/vehicle-expense-detail-schema.json",
    "title": "Vehicle Expense Detail",
    "description": "Detail object added to a vehicle expense entry",
    "type": "object",
    "properties": {
        "location" : {
            "description" : "The location of the expense",
            "type" : "string"
        },
        "vendor": {
            "description" : "The provider of the service",
            "type" : "string"
        },
        "balance-on_acct" : {
            "description" : "The balance on account",
            "type" : "number"
        }
    },
    "required": ["location"]
}